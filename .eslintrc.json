{
	"plugins": ["jest"],
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"commonjs": true,
		"jest/globals": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": "warn"
	},
	"globals": {
		"XLSX": "readonly",
		"Mustache": "readonly"
	}
}
